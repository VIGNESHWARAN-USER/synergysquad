---
// src/components/Achievements.astro

const companyLogos = [
    'ami-logo.svg',
    'mr-cooper-logo.webp',
    'tech-mahindra-logo.png',
    'mindtree-logo.png',
    'tcs-logo.png'
];
---
<section class="achievements">
    <div class="container">
        <h2 class="section-title fade-in-up">Proven Placement Success</h2>
        
        <div class="highlight-stat fade-in-up">
            <span class="stat-number">75%+</span>
            <p class="stat-description">
                Of Synergy Squad 1.0 members secured placements in Tier-1 IT companies, reflecting the real-world impact of our focused training initiative.
            </p>
        </div>

        <div class="logo-cloud fade-in-up">
            <p class="cloud-title">Our members have been hired by industry leaders, including:</p>
            <div class="logo-grid">
                {companyLogos.map(logo => (
                    <img src={`/images/${logo}`} alt={logo.split('.')[0].replace('-', ' ')} class="company-logo" />
                ))}
            </div>
        </div>
    </div>
</section>

<style>
    /* Section Styling */
    .achievements {
        background-color: #ffffff;
        padding: 5rem 1.5rem;
        text-align: center;
        border-top: 1px solid var(--border-color);
        border-bottom: 1px solid var(--border-color);
        overflow: hidden;
    }
    .container { max-width: 80ch; margin: auto; }
    .section-title { font-size: 2.5rem; font-weight: 800; margin-bottom: 3rem; }
    .highlight-stat { margin-bottom: 4rem; }
    .stat-number { display: block; font-size: 6rem; font-weight: 800; color: var(--primary-color); line-height: 1; margin-bottom: 1rem; }
    .stat-description { font-size: 1.125rem; max-width: 60ch; margin: auto; color: var(--text-secondary); }
    .cloud-title { margin-bottom: 2rem; font-weight: 500; color: var(--text-primary); }
    .logo-grid { display: flex; flex-wrap: wrap; justify-content: center; align-items: center; gap: 3rem; }
    .company-logo { height: 70px; width: 150px; filter: grayscale(100%); opacity: 0.7; transition: filter 0.3s ease, opacity 0.3s ease; }
    .company-logo:hover { filter: grayscale(0%); opacity: 1; }

    /* --- ANIMATION STYLES --- */
    .fade-in-up {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
    }
    .fade-in-up.is-visible {
        opacity: 1;
        transform: translateY(0);
    }
    .highlight-stat.fade-in-up { transition-delay: 0.2s; }
    .logo-cloud.fade-in-up { transition-delay: 0.4s; }

    /* --- THIS IS THE UPDATE FOR MOBILE VIEW --- */
    @media (max-width: 768px) {
        .achievements {
            padding: 2rem 1.5rem; /* Reduce vertical padding */
        }
        .section-title {
            font-size: 2rem; /* Smaller section title */
        }
        .stat-number {
            font-size: 4.5rem; /* Make the large number smaller */
        }
        .stat-description {
            font-size: 1rem; /* Slightly smaller description text */
        }
        .logo-grid {
            gap: 2rem 2.5rem; /* Reduce the gap between logos */
        }
        .company-logo {
            height: 30px; /* Make logos slightly smaller */
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const elementsToAnimate = document.querySelectorAll('.fade-in-up');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('is-visible');
                    observer.unobserve(entry.target);
                }
            });
        }, {
            threshold: 0.05
        });
        
        elementsToAnimate.forEach(element => {
            observer.observe(element);
        });
    });
</script>